<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.runningbuddy.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_enregistrercourse"
        android:name="com.example.runningbuddy.ui.enregistrercourse.EnregistrerCourseFragment"
        android:label="@string/title_enregistrercourse"
        tools:layout="@layout/fragment_enregistrer_course" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.runningbuddy.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/setting"
        android:name="com.example.runningbuddy.ui.settings.SettingFragment"
        android:label="Settings"
        tools:layout="@layout/settings" />
    <fragment
        android:id="@+id/friends"
        android:name="com.example.runningbuddy.ui.friends.FriendsFragment"
        android:label="Recherche amis"
        tools:layout="@layout/search_friends" />
</navigation>